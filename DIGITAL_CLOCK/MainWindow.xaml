<Window x:Class="DIGITAL_CLOCK.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DIGITAL_CLOCK"
        mc:Ignorable="d"
        Title="Digital Clock" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/JANE.png"/>
        </Grid.Background>
        <TextBlock x:Name="datelbl" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Height="235" Width="526" FontSize="90" FontWeight="Bold" TextAlignment="Center" Foreground="#FF13E311">
            <TextBlock.Background>
                <ImageBrush TileMode="None"/>
            </TextBlock.Background>
            <TextBlock.Effect>
                <DropShadowEffect/>
            </TextBlock.Effect>
        </TextBlock>

    </Grid>
</Window>
